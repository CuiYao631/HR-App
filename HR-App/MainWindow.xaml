<AduSkin:MetroWindow
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HR_App"
        xmlns:AduSkin="clr-namespace:AduSkin.Controls.Metro;assembly=AduSkin"
        xmlns:pages="clr-namespace:HR_App.pages" x:Class="HR_App.MainWindow"
        mc:Ignorable="d"
        Title="人事工具箱" Height="450" Width="800"
    ShowInTaskbar="False"
    Loaded="MetroWindow_Loaded" Icon="image/icon.png"
    >
    <Grid>
        <AduSkin:AduTabControl  >
            <TabItem Header="主页" Height="30" Width="100" >
                <Grid Background="#FFE5E5E5">
                    <pages:userInfo />
                </Grid>
            </TabItem>
            <TabItem Header="设置" Height="30" Width="100">
                <Grid Background="#FFE5E5E5">
                    <pages:seting/>
                </Grid>
            </TabItem>
           
        </AduSkin:AduTabControl>
    </Grid>
</AduSkin:MetroWindow>
